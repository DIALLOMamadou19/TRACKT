</div>

<!-- Script pour gÃ©rer le dropdown -->
<script>
    document.querySelector('button').addEventListener('click', function() {
        const dropdown = document.getElementById('dropdownMenu');
        dropdown.classList.toggle('hidden');
    });

    // Fermer le dropdown si on clique en dehors
    window.addEventListener('click', function(event) {
        const dropdown = document.getElementById('dropdownMenu');
        if (!event.target.closest('button') && !dropdown.contains(event.target)) {
            dropdown.classList.add('hidden');
        }
    });

    // Fonction pour ouvrir un projet dans une nouvelle balise <main>
    function openProject(projectId) {
        // Logique pour ouvrir un projet, par exemple rediriger vers une page projet
        window.location.href = '/projet/' + projectId; // Remplacez cela par votre logique
    }
</script>