<div class="flex justify-between items-center w-full px-6 py-3 bg-white rounded-2xl border">
    <div class="flex items-center relative">
        <!-- Bouton pour afficher le projet actuel -->
        <button type="button" class="inline-flex justify-between w-full rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-indigo-500">
            Liste des mes projets ðŸ“œ
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 text-gray-500" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
        </button>

        <!-- Dropdown Menu -->
        <div class="absolute right-0 z-10 hidden bg-white rounded-md shadow-lg mt-2 w-48" id="dropdownMenu"> <!-- Ajustement de mt-1 Ã  mt-2 -->
            <ul class="py-1" aria-labelledby="dropdownMenuButton">
                {% for projet in projets %}
                    <li class="px-4 py-2 text-gray-700 hover:bg-gray-100 cursor-pointer" onclick="openProject('{{ projet.id }}')">{{ projet.nomProjet }}</li> <!-- Ajout de l'Ã©vÃ©nement onclick -->
                {% else %}
                    <li class="px-4 py-2 text-gray-500">Aucun projet trouvÃ©.</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="flex items-center">
