{# templates/dashboard/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
<div class="min-h-screen bg-gray-100 flex m-4 rounded-lg bg-white shadow-lg">
  <!-- Menu Vertical à Gauche -->
<aside class="w-64 bg-white text-black flex flex-col border-r border-gray-300">
    <div class="flex items-center justify-center h-16">
        <!-- Logo -->
        <img src="{{ asset('images/trackt.jpg') }}" alt="Logo" class="h-14">
    </div>
    <nav class="flex-1 mt-5">
        <ul>
            <!-- Dashboard avec icône de plusieurs carrés -->
            <li class="p-4 hover:bg-yellow-200 flex items-center space-x-3 border-b border-gray-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h7v7H3zM14 3h7v7h-7zM3 14h7v7H3zM14 14h7v7h-7z"></path>
                </svg>
                <span>Dashboard</span>
            </li>

            <!-- Tâches avec icône de cercle coché -->
            <li class="p-4 hover:bg-yellow-200 flex items-center space-x-3 border-b border-gray-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M5 12a7 7 0 1114 0 7 7 0 01-14 0z"></path>
                </svg>
                <span>Tâches</span>
            </li>

            <!-- Projets avec icône de dossier empilé -->
            <li class="p-4 hover:bg-yellow-200 flex items-center space-x-3 border-b border-gray-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 2h12a2 2 0 012 2v16a2 2 0 01-2 2H6a2 2 0 01-2-2V4a2 2 0 012-2zm0 4v12h12V6H6z"></path>
                </svg>
                <span>Projets</span>
            </li>
        </ul>
    </nav>

    <!-- Options en bas du menu -->
    <div class="flex flex-col items-center mt-auto">
        <div class="border-t border-gray-300 w-full">
            <ul>
                <!-- Paramètres -->
                <li class="p-4 hover:bg-yellow-200 flex items-center space-x-3 border-b border-gray-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm0-10l2-2 4 4-4 4-2-2 2-2H12z"></path>
                    </svg>
                    <span>Paramètres</span>
                </li>

                <!-- Thème -->
                <li class="p-4 hover:bg-yellow-200 flex items-center space-x-3">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2c1.104 0 2 .896 2 2 0 .553-.223 1.053-.588 1.412l-5.171 6.091c.449.655.758 1.392.964 2.138l4.678-1.561a2 2 0 10-.822-3.951L9.7 6.025A2 2 0 1012 2zm7.042 4.958a2 2 0 110 2.828 2 2 0 010-2.828zm-1.414-1.414a4 4 0 11-5.656 5.656 4 4 0 015.656-5.656z"></path>
                    </svg>
                    <span>Thème</span>
                </li>

                <!-- Déconnexion -->
                <li class="p-4 hover:bg-yellow-200 flex items-center space-x-3 border-t border-gray-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 7l3-3m0 0l3 3m-3-3v12"></path>
                    </svg>
                    <span>Déconnexion</span>
                </li>
            </ul>
        </div>
    </div>
</aside>


    <!-- 2. Partie Principale (Header + Contenu) -->
    <div class="flex-1 flex flex-col m-4 rounded-lg bg-white shadow-lg">
        <!-- 2.1 Header avec barre de recherche et icônes à droite -->
        <!-- Header avec barre de recherche et icônes à droite -->
<!-- Header avec barre de recherche, icônes à droite et liste déroulante des projets à gauche -->
<header class="bg-white shadow-md rounded-t-lg mb-4">
    <div class="flex items-center justify-between p-4">
        <!-- Liste déroulante des Projets à gauche -->
        <div class="flex items-center space-x-4">
            <label for="projects" class="text-gray-600">Projets:</label>
            <select id="projects" class="border-2 border-gray-300 rounded-lg px-3 py-1 focus:outline-none">
                <option value="projet1">Projet 1</option>
                <option value="projet2">Projet 2</option>
                <option value="projet3">Projet 3</option>
            </select>
        </div>

        <!-- Barre de recherche au centre -->
        <div class="flex-1 flex justify-center">
            <input type="text" class="w-1/3 border-2 border-gray-300 rounded-full px-4 py-2 focus:outline-none" placeholder="Rechercher...">
        </div>

        <!-- Icônes de message, notification et compte utilisateur à droite -->
        <div class="flex items-center space-x-4">
            <!-- Mail (SVG) -->
            <div class="relative">
                <button class="text-gray-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12.79V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2h14a2 2 0 002-2v-6.79l-7-4-7 4V6l7-4 7 4z"></path>
                    </svg>
                </button>
            </div>

            <!-- Notification (SVG) -->
            <div class="relative">
                <button class="text-gray-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405a7.935 7.935 0 001.184-4.595A7.937 7.937 0 0012 4a7.937 7.937 0 00-7.779 7.001A7.935 7.935 0 005.405 15.595L4 17h5m6 0v2a2 2 0 01-2 2h-4a2 2 0 01-2-2v-2"></path>
                    </svg>
                </button>
            </div>

            <!-- Compte utilisateur avec tooltip -->
            <div class="relative">
                <button class="text-gray-600" aria-label="Mon compte">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 rounded-full" fill="currentColor" viewBox="0 0 24 24">
                        <circle cx="12" cy="12" r="10" />
                    </svg>
                </button>
                <!-- Tooltip au survol -->
                <div class="absolute left-0 top-0 mt-10 ml-[-60px] w-32 bg-gray-800 text-white text-xs rounded p-2 opacity-0 hover:opacity-100 transition-opacity">
                    Mon compte
                </div>
            </div>
        </div>
    </div>
</header>




        <!-- Contenu Principal du Dashboard -->
<main class="flex-1 p-6">
    <!-- Partie Principale du Dashboard -->
    <div class="bg-white shadow-md p-6 rounded-lg">
        <h2 class="text-2xl font-bold text-gray-800">Bienvenue dans le Dashboard</h2>
        <p class="mt-4 text-gray-600">Ici, vous pouvez gérer vos tâches et projets en collaboration avec votre équipe.</p>

        {# comment utiliser une pop up #}
         {# {% include 'components/modal.html.twig' with {
        'id': 'myModal',
        'title': 'Créer une nouvelle tâche',
        'close_label': 'Fermer'
    } %} #}
    </div>

    <!-- 1. Première section  -->
    <div class="mt-6 bg-white shadow-md p-6 rounded-lg h-[50vh]">
        <h3 class="text-xl font-semibold text-gray-800">Vue d'ensemble des Projets</h3>
        <p class="mt-2 text-gray-600">Voici un aperçu des projets en cours et de leur état d'avancement.</p>
        
    </div>

    <!-- Comment inclure un bouton ?? -->
    {# {% include 'components/button.html.twig' with { 'color': 'yellow', 'label': 'Ajouter une tâche' } %}  #}


    <!-- 2. Section inférieure (2 parties côte à côte) -->
    <div class="grid grid-cols-2 gap-6 mt-6">
        <!-- Calendrier -->
        <div class="bg-white shadow-md p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-gray-800">Calendrier</h3>
            <div class="mt-4">
                <!-- Utilisation d'un calendrier fictif -->
                <table class="w-full">
                    <thead>
                        <tr class="text-gray-600">
                            <th class="p-2">Lun</th>
                            <th class="p-2">Mar</th>
                            <th class="p-2">Mer</th>
                            <th class="p-2">Jeu</th>
                            <th class="p-2">Ven</th>
                            <th class="p-2">Sam</th>
                            <th class="p-2">Dim</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="p-2 text-center">1</td>
                            <td class="p-2 text-center">2</td>
                            <td class="p-2 text-center bg-yellow-200">3</td> <!-- Jour J -->
                            <td class="p-2 text-center text-gray-400">4</td>
                            <td class="p-2 text-center text-gray-400">5</td>
                            <td class="p-2 text-center text-gray-400">6</td>
                            <td class="p-2 text-center text-gray-400">7</td>
                        </tr>
                        <!-- Ajouter d'autres jours ici -->
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Jauge des tâches et projets -->
        <div class="bg-white shadow-md p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-gray-800">Avancement</h3>
            <div class="mt-4">
                <!-- Tâche utilisateur -->
                <p class="text-gray-600">Tâches de l'utilisateur</p>
                <div class="w-full bg-gray-300 rounded-full h-2.5">
                    <div class="bg-yellow-400 h-2.5 rounded-full" style="width: 65%;"></div> <!-- 65% de tâche complète -->
                </div>
                <p class="mt-1 text-sm text-gray-500">65% complété</p>

                <!-- Projets auxquels l'utilisateur participe -->
                <p class="mt-4 text-gray-600">Projets auxquels vous participez</p>
                <div class="w-full bg-gray-300 rounded-full h-2.5">
                    <div class="bg-yellow-400 h-2.5 rounded-full" style="width: 50%;"></div> <!-- 50% de projet complet -->
                </div>
                <p class="mt-1 text-sm text-gray-500">50% complété</p>

                <!-- Avancement global des projets -->
                <p class="mt-4 text-gray-600">Avancement des projets globaux</p>
                <div class="w-full bg-gray-300 rounded-full h-2.5">
                    <div class="bg-yellow-400 h-2.5 rounded-full" style="width: 75%;"></div> <!-- 75% d'avancement -->
                </div>
                <p class="mt-1 text-sm text-gray-500">75% complété</p>
                
            </div>
        </div>
    </div>
</main>


    </div>
</div>
{% endblock %}


