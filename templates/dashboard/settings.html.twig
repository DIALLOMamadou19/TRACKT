{# templates/dashboard/settings.html.twig #}


{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold text-gray-900">Paramètres</h1>
    <form class="mt-6 space-y-6">
        <!-- Paramètres de l'utilisateur -->
        <div>
            <label for="username" class="block text-sm font-medium text-gray-700">Nom d'utilisateur</label>
            <input type="text" id="username" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" value="{{ app.user.username }}">
        </div>

        <!-- Ajoute d'autres options de paramètres ici -->
        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
            Enregistrer les modifications
        </button>
    </form>
</div>
{% endblock %}


