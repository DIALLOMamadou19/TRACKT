{# templates/project/projects.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Track't - Projects</title>
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
</head>
<body class="bg-gray-100">



<div class="min-h-screen bg-gray-100 flex m-4 rounded-lg bg-white shadow-lg">
  <!-- Menu Vertical à Gauche -->
<aside class="w-64 bg-white text-black flex flex-col border-r border-gray-300">
    <div class="flex items-center justify-center h-16">
        <!-- Logo -->
        <img src="{{ asset('images/trackt.jpg') }}" alt="Logo" class="h-14">
    </div>
    <nav class="flex-1 mt-5">
        <ul>
            <!-- Dashboard avec icône de plusieurs carrés -->
            <li class="p-4 hover:bg-yellow-200 flex items-center space-x-3 border-b border-gray-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h7v7H3zM14 3h7v7h-7zM3 14h7v7H3zM14 14h7v7h-7z"></path>
                </svg>
                <span>Dashboard</span>
            </li>

            <!-- Tâches avec icône de cercle coché -->
            <li class="p-4 hover:bg-yellow-200 flex items-center space-x-3 border-b border-gray-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M5 12a7 7 0 1114 0 7 7 0 01-14 0z"></path>
                </svg>
                <span>Tâches</span>
            </li>

            <!-- Projets avec icône de dossier empilé -->
            <li class="p-4 hover:bg-yellow-200 flex items-center space-x-3 border-b border-gray-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 2h12a2 2 0 012 2v16a2 2 0 01-2 2H6a2 2 0 01-2-2V4a2 2 0 012-2zm0 4v12h12V6H6z"></path>
                </svg>
                <span>Projets</span>
            </li>
        </ul>
    </nav>

    <!-- Options en bas du menu -->
    <div class="flex flex-col items-center mt-auto">
        <div class="border-t border-gray-300 w-full">
            <ul>
                <!-- Paramètres -->
                <li class="p-4 hover:bg-yellow-200 flex items-center space-x-3 border-b border-gray-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm0-10l2-2 4 4-4 4-2-2 2-2H12z"></path>
                    </svg>
                    <span>Paramètres</span>
                </li>

                <!-- Thème -->
                <li class="p-4 hover:bg-yellow-200 flex items-center space-x-3">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2c1.104 0 2 .896 2 2 0 .553-.223 1.053-.588 1.412l-5.171 6.091c.449.655.758 1.392.964 2.138l4.678-1.561a2 2 0 10-.822-3.951L9.7 6.025A2 2 0 1012 2zm7.042 4.958a2 2 0 110 2.828 2 2 0 010-2.828zm-1.414-1.414a4 4 0 11-5.656 5.656 4 4 0 015.656-5.656z"></path>
                    </svg>
                    <span>Thème</span>
                </li>

                <!-- Déconnexion -->
                <li class="p-4 hover:bg-yellow-200 flex items-center space-x-3 border-t border-gray-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 7l3-3m0 0l3 3m-3-3v12"></path>
                    </svg>
                    <span>Déconnexion</span>
                </li>
            </ul>
        </div>
    </div>
</aside>

    <!-- 2. Partie Principale (Header + Contenu) -->
<div class="flex-1 flex flex-col m-4 rounded-lg bg-white shadow-lg">
    <!-- 2.1 Header avec barre de recherche et icônes à droite -->
    <!-- Header avec barre de recherche et icônes à droite -->
    <!-- Header avec barre de recherche, icônes à droite et liste déroulante des projets à gauche -->
<header class="bg-white shadow-md rounded-t-lg mb-4 border border-gray-300 rounded-lg">
    <div class="flex items-center justify-between p-4 m-2">
        <!-- Liste déroulante des Projets à gauche -->
        <div class="flex items-center space-x-4">
            <label for="projects" class="text-gray-600">Projets:</label>
            <select id="projects" class="border-2 border-gray-300 rounded-lg px-3 py-1 focus:outline-none">
                <option value="projet1">Projet 1</option>
                <option value="projet2">Projet 2</option>
                <option value="projet3">Projet 3</option>
            </select>
        </div>

        <!-- Barre de recherche au centre -->
        <div class="flex-1 flex justify-center">
            <input type="text" class="w-1/3 border-2 border-gray-300 rounded-full px-4 py-2 focus:outline-none" placeholder="Rechercher...">
        </div>

        <!-- Icônes de message, notification et compte utilisateur à droite -->
        <div class="flex items-center space-x-4">
            <!-- Mail (SVG) -->
            <div class="relative">
                <button class="text-gray-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12.79V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2h14a2 2 0 002-2v-6.79l-7-4-7 4V6l7-4 7 4z"></path>
                    </svg>
                </button>
            </div>

            <!-- Notification (SVG) -->
            <div class="relative">
                <button class="text-gray-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405a7.935 7.935 0 001.184-4.595A7.937 7.937 0 0012 4a7.937 7.937 0 00-7.779 7.001A7.935 7.935 0 005.405 15.595L4 17h5m6 0v2a2 2 0 01-2 2h-4a2 2 0 01-2-2v-2"></path>
                    </svg>
                </button>
            </div>

            <!-- Compte utilisateur avec tooltip -->
            <div class="relative">
                <button class="text-gray-600" aria-label="Mon compte">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 rounded-full" fill="currentColor" viewBox="0 0 24 24">
                        <circle cx="12" cy="12" r="10" />
                    </svg>
                </button>
                <!-- Tooltip au survol -->
                <div class="absolute left-0 top-0 mt-10 ml-[-60px] w-32 bg-gray-800 text-white text-xs rounded p-2 opacity-0 hover:opacity-100 transition-opacity">
                    Mon compte
                </div>
            </div>
        </div>
    </div>
</header>

    <div class="flex h-screen ">
        <!-- Main Content -->
        <main class="flex-1 p-6 border border-gray-300 rounded-lg">
            <!-- Project Cards -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 border border-gray-300 rounded-lg">
                {% for project in projects %}
                    <div class="bg-gray-100 p-4 rounded-lg shadow-md">
                        <h4 class="text-lg font-semibold mb-2">{{ project.nomProjet }}</h4>
                        <p class="text-gray-600">{{ project.description }}</p>

                        <!-- Bouton de modification -->
                        <a href="{{ path('app_project_edit', { id: project.id }) }}" class="bg-blue-500 text-white px-4 py-2 rounded mt-4">
                            Modifier
                        </a>

                        <!-- Bouton de suppression qui ouvre le modal -->
                            <button class="bg-red-500 text-white px-4 py-2 rounded mt-4" onclick="openModal({{ project.id }}, '{{ csrf_token('delete_project_' ~ project.id) }}')">
                                Supprimer
                            </button>
                    </div>
                {% else %}
                    <p>Aucun projet disponible.</p>
                {% endfor %}
            </div>

            <!-- Modal de confirmation -->
            <div id="confirm-delete-modal" class="fixed z-50 inset-0 bg-gray-900 bg-opacity-50 flex justify-center items-center hidden">
                <div class="bg-white p-6 rounded-lg shadow-lg w-1/3">
                    <h3 class="text-lg font-semibold">Confirmer la suppression</h3>
                    <p>Êtes-vous sûr de vouloir supprimer ce projet ?</p>
                    <div class="flex justify-end mt-4">
                        <button id="cancel-delete" class="bg-gray-300 text-black px-4 py-2 rounded mr-2" onclick="closeModal()">Annuler</button>
                        <form id="delete-form" method="POST" action="">
                            <input type="hidden" name="_token" id="delete-form-token">
                            <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded">Confirmer</button>
                        </form>
                    </div>
                </div>
            </div>







            <!-- Add Project Button -->
            <div class="flex justify-end mt-6">
                <button id="create-project-btn" class="bg-yellow-500 hover:bg-yellow-600 text-white py-2 px-4 rounded-lg shadow">
                    Add Project
                </button>
            </div>
        </main>
    </div>



    <!-- Modal for creating a new project -->
<div id="create-project-modal" class="fixed z-50 inset-0 bg-gray-900 bg-opacity-50 flex justify-center items-center hidden">
    <div class="bg-white p-8 rounded-lg shadow-lg w-4/5 max-w-md">
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-lg font-semibold text-gray-700">Créer un nouveau projet</h3>
            <button id="close-modal" class="text-gray-500 hover:text-gray-800 focus:outline-none">&times;</button>
        </div>
        <form action="{{ path('app_project_create') }}" method="POST" class="space-y-6">
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700">Nom</label>
                <input type="text" id="name" name="name" required 
                    class="mt-1 w-full border border-gray-300 rounded-md p-2 focus:ring-yellow-500 focus:border-yellow-500">
            </div>
            <div>
                <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
                <textarea id="description" name="description" rows="4" required 
                    class="mt-1 w-full border border-gray-300 rounded-md p-2 focus:ring-yellow-500 focus:border-yellow-500"></textarea>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-700 mb-2">Assigned users</h3>
                <div class="flex items-center space-x-2">
                    <span class="bg-yellow-400 text-white rounded-full px-3 py-1 text-xs font-medium">User 1</span>
                    <button type="button" class="bg-gray-100 hover:bg-gray-200 text-sm text-gray-600 px-2 py-1 rounded focus:outline-none">+ Add new user</button>
                </div>
            </div>
            <div class="flex justify-end">
                <button type="submit" class="w-full bg-yellow-500 text-white font-medium py-2 rounded-md hover:bg-yellow-600 focus:ring-2 focus:ring-yellow-400 focus:ring-opacity-50">
                    Créer le projet
                </button>
            </div>
        </form>
    </div>
</div>







    <!-- Link your JavaScript here -->
    <script src="{{ asset('build/app.js') }}"></script>

    <script>
    document.getElementById('create-project-btn').addEventListener('click', function () {
        document.getElementById('create-project-modal').classList.remove('hidden');
    });

    document.getElementById('close-modal').addEventListener('click', function () {
        document.getElementById('create-project-modal').classList.add('hidden');
    });
    </script>


    <script>
        function openModal(projectId, csrfToken) {
            // Rendre la modale visible
            document.getElementById('confirm-delete-modal').classList.remove('hidden');

            // Mettre à jour l'action du formulaire avec l'ID du projet
            const deleteForm = document.getElementById('delete-form');
            deleteForm.action = `/projects/delete/${projectId}`;

            // Mettre à jour le token CSRF
            document.getElementById('delete-form-token').value = csrfToken;
        }

function closeModal() {
    // Cacher la modale
    document.getElementById('confirm-delete-modal').classList.add('hidden');
}




        document.getElementById('cancel-delete').addEventListener('click', closeModal);
    </script>


</body>
</html>


