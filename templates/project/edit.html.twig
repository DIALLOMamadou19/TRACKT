{# templates/project/edit.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modifier le Projet</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-lg w-96">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-xl font-semibold text-gray-700">Modifier le projet : {{ project.nomProjet }}</h1>
            <button class="text-gray-500 hover:text-gray-800 focus:outline-none">&times;</button>
        </div>

        <form action="{{ path('app_project_edit', { id: project.id }) }}" method="POST" class="space-y-4">
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700">Nom du projet</label>
                <input type="text" id="name" name="name" value="{{ project.nomProjet }}" 
                    class="mt-1 w-full border border-gray-300 rounded-md p-2 focus:ring-yellow-500 focus:border-yellow-500" required>
            </div>

            <div>
                <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
                <textarea id="description" name="description" rows="4" 
                    class="mt-1 w-full border border-gray-300 rounded-md p-2 focus:ring-yellow-500 focus:border-yellow-500" required>{{ project.description }}</textarea>
            </div>

            <div>
                <h3 class="text-sm font-medium text-gray-700 mb-2">Assigned users</h3>
                <div class="flex items-center space-x-2">
                    <span class="bg-yellow-400 text-white rounded-full px-3 py-1 text-xs font-medium">User 1</span>
                    <button type="button" class="bg-gray-100 hover:bg-gray-200 text-sm text-gray-600 px-2 py-1 rounded focus:outline-none">+ Add new user</button>
                </div>
            </div>

            <button type="submit" 
                class="w-full bg-yellow-500 text-white font-medium py-2 rounded-md hover:bg-yellow-600 focus:ring-2 focus:ring-yellow-400 focus:ring-opacity-50">Enregistrer les modifications</button>
        </form>

        <a href="{{ path('app_projects') }}" 
            class="block mt-4 text-center text-gray-500 hover:text-gray-700">Retour Ã  la liste des projets</a>
    </div>
</body>
</html>
