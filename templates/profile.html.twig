{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
<div class="container">
    <h1>Profile</h1>
    
    <div class="profile-card">
        <div class="profile-photo">
            <img src="/images/default-profile.png" alt="Profile photo">
            <button class="btn-upload">+ upload photo</button>
            <p>Supported formats: .jpg, .gif or .png<br>Max file size: 500k</p>
        </div>

        <div class="profile-details">
            <div class="form-group">
                <label>Nom</label>
                <input type="text" value="Groupe 4" readonly>
            </div>

            <div class="form-group">
                <label>Prenom</label>
                <input type="text" value="Groupe 4" readonly>
            </div>

            <div class="form-group">
                <label>Adresse email</label>
                <input type="email" value="example@gmail.com" readonly>
                <button class="btn">Changer l'adresse email</button>
            </div>

            <div class="form-group">
                <label>Mot de passe</label>
                <input type="password" value="*********" readonly>
                <button class="btn">Changer le mot de passe</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
